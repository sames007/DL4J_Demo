<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="edu.farmingdale.dl4j_demo.DigitRecognizerController" spacing="10" alignment="CENTER" stylesheets="@style.css">
    <Canvas fx:id="canvas" width="280" height="280" styleClass="canvas"/>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="clearBtn" text="Clear" onAction="#handleClear"/>
        <Label fx:id="resultLabel" text="Draw a digit" styleClass="result-label"/>
    </HBox>
</VBox>
